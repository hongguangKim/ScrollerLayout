<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scrollerlayout.MainActivity" >

    <com.example.widget.ScrollerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res/com.example.scrollerlayout"
        android:id="@+id/scrollerLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00ff"
        android:padding="0dp"
        custom:scroller_mode="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="0dp"
            android:text="Button" />
    </com.example.widget.ScrollerLayout>

</RelativeLayout>